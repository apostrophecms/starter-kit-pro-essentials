{
  "name": "a3-pro-boilerplate",
  "version": "1.0.0",
  "description": "A starting point for Apostrophe Pro projects in A3",
  "private": true,
  "scripts": {
    "build": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production bash -c 'node app @apostrophecms/asset:build'",
    "//": "because nodemon insists on executing 'start' if it exists, we must distinguish production",
    "production-start": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production npm run start",
    "start": "node app",
    "dev": "nodemon",
    "test": "eslint . && stylelint 'modules/**/*.scss'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/a3-pro-boilerplate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Apostrophe Technologies",
  "license": "UNLICENSED",
  "dependencies": {
    "@apostrophecms-pro/basics": "^1.3.1",
    "@apostrophecms-pro/document-versions": "^2.0.0",
    "@apostrophecms-pro/palette": "^4.0.1",
    "apostrophe": "^4.0.0",
    "node-fetch": "^2.6.5",
    "qs": "^6.9.6",
    "require-all": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-apostrophe": "^4.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-apostrophe": "^3.0.0",
    "nodemon": "^3.0.1"
  }
}
